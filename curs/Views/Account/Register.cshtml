
@model Register
<div class="container">
    <div class="row">

        <div class="col-md-12">

            <h2>Регистрация</h2>
            
            <div class="text-danger font-weight-bold" asp-validation-summary="ModelOnly"></div>

            <form method="post">

                <div class="form-group">
                    <label asp-for="UserName">Логин</label><br/>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" />
                </div>

                <div class="form-group">
                    <label asp-for="Password">Пароль</label>
                    <input asp-for="Password" class="form-control">
                    <span asp-validation-for="Password" />
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword">Подтвердить пароль</label>
                    <input asp-for="ConfirmPassword" class="form-control">
                    <span asp-validation-for="ConfirmPassword" />
                </div>

                <div class="form-group">
                    <label asp-for="FirstName">Имя пользователя</label>
                    <input asp-for="FirstName" class="form-control">
                    <span asp-validation-for="FirstName" />
                </div>

                <div class="form-group">
                    <label asp-for="LastName">Фамилия пользователя</label>
                    <input asp-for="LastName" class="form-control">
                    <span asp-validation-for="LastName" />
                </div>

                <div class="form-group">
                    <label asp-for="Phone">Телефон</label>
                    <input asp-for="Phone" class="form-control">
                    <span asp-validation-for="Phone" />
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Зарегистрироваться" asp-controller="Account" asp-action="Register">
                </div>

                <p>Уже есть аккаунт. <a href="/account/login">Войти в него</a>.</p>

            </form>
        </div>
    </div>
</div>
