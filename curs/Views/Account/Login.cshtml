@model Login
<form method="post">
    <div>
        <h3>Вход</h3>
    </div>

    <div class="text-danger font-weight-bold" asp-validation-summary="All"></div>
   
    <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />
    <span>ReturnUrl: @Model.ReturnUrl</span>

    <div class="row">
        <div class="col-6">
            <input asp-for="UserName" class="form-control" placeholder="Логин" />
            <span asp-validation-for="UserName" />
        </div>
    </div>
    <div class="row">
        <div class="col-6">

            <input asp-for="Password" class="form-control" placeholder="Пароль">
            <span asp-validation-for="Password" />
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <input type="checkbox" name="RememberMe" value="true">
            <label>Запомнить меня</label>
            <a class="form-control" asp-area="" asp-controller="Account" asp-action="Register" asp-route-ReturnUrl="@Model.ReturnUrl">Регистрация</a>
        </div>
    </div>
    <div>
        <button type="submit" asp-controller="Account" asp-action="Login">Войти</button>
    </div>
</form>