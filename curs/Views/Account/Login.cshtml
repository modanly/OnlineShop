@model Login
<div class="container">
    

        <div class="form-signin w-25 m-auto">

            

            <h1 class="h3 mb-3 fw-normal">Введите логин и пароль.</h1>

            <div class="text-danger font-weight-bold" asp-validation-summary="ModelOnly"></div>


            <form method="post">

                <div class="form-group">
                    
                    <input asp-for="UserName" class="form-control" placeholder="Логин"/>
                    <span asp-validation-for="UserName" />
                </div>

                <div class="form-group">
                    
                    <input asp-for="Password" class="form-control" placeholder="Пароль">
                    <span asp-validation-for="Password" />
                </div>

                <div>
                    <input type="checkbox" name="rememberMe">
                    <label>Запомнить меня</label>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Войти" asp-controller="Account" asp-action="Login">
                </div>

                <p>Нет аккаунта? <a href="/account/register">Создайте его за минуту</a>.</p>

            </form>
        </div>
    
</div>

