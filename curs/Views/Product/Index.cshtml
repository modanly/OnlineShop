@model ProductViewModel

<div class="row">
    <div class="col-3">
        <div id="carouselExampleAutoplaying" class="carousel carousel-dark slide" data-bs-ride="carousel">
            <!-- Индикаторы показываются только если изображений больше одного -->
            @if (Model.ImagesPaths.Count() > 1)
            {
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                    @for (var i = 1; i < Model.ImagesPaths.Count(); i++)
                    {
                        <button type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide-to="@i" aria-label="Slide @i+1"></button>
                    }
                </div>
            }

            <div class="carousel-inner">
                <!-- Первое изображение товара -->
                <div class="carousel-item active">
                    <img src="@Model.ImagesPaths[0]" class="d-block img-fluid w-100 rounded" alt="Изображение карусели">
                </div>
                @if (Model.ImagesPaths.Count() > 1)
                {
                    @foreach (var imagePath in Model.ImagesPaths.Skip(1))
                    {
                        <div class="carousel-item">
                            <img src="@imagePath" class="d-block img-fluid w-100 rounded" alt="Изображение карусели" />
                        </div>
                    }
                }
            </div>

            <!-- Стрелочки только если изображений больше одного -->
            @if (Model.ImagesPaths.Count() > 1)
            {
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Предыдущий</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Следующий</span>
                </button>
            }
        </div>
    </div>
    <div class="col-9">
        <h5>@Model.Name</h5>
        <h5>@Model.Cost руб</h5>
        <h5>@Model.Description</h5>
        <a class="btn btn-dark" href="/home/index" role="button">Продолжить покупки</a>
        <a class="btn btn-dark" href="/cart/add?productId=@Model.Id" role="button">Добавить в корзину</a>
    </div>
</div>