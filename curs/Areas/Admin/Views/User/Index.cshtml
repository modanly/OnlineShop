@using OnlineShop.Models;
@{
    int i = 1;
}

@model List<UserViewModel>;
<div class="row">
    <div class="col-lg-3">
        <div class="my-4">
            @await Html.PartialAsync("AdminLeftMenu")
        </div>
    </div>
    <div class="col-9">
        <h3>Список пользователей</h3>
        <a class="btn btn-outline-warning" asp-area="Admin" asp-controller="User" asp-action="Add"><i class="bi bi-database-add"> Добавить пользователя </i></a>

        @if (Model == null)
        {
            <h3>Пользователей нет</h3>
        }
        else
        {
            <div class="row">
                <div class="col">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>№</th>
                                <th>Логин</th>
                                <th>Телефон</th>
                                <th>Роли</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@user.UserName</td>
                                    <td>@user.Phone</td>
                                    <td>
                                        @foreach (var role in user.Roles)
                                        {
                                            <span>@role.Name</span>

                                            <br />
                                        }
                                    </td>
                                    <td class="col-4 text-end">
                                        <a class="btn btn-outline-warning" asp-area="Admin" asp-controller="User" asp-action="Details" asp-route-userName="@user.UserName"><i class="bi bi-pencil"> Подробнее </i></a>
                                    </td>
                                </tr>
                                i += 1;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>
</div>