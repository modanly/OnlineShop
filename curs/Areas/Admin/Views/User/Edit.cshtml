@model EditUser

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Редактирование пользователя</h2>

            <div class="text-danger font-weight-bold" asp-validation-summary="ModelOnly"></div>

            <form method="post">
                <div class="form-group">
                    <label asp-for="UserName">Логин</label><br />
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" />
                </div>

                <div class="form-group">
                    <label asp-for="Phone">Телефон</label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" />
                </div>

                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Сохранить" />
                </div>
            </form>
        </div>
    </div>
</div>