@model EditRightsViewModel

<form method="post">
    <div class="text-danger font-weight-bold" asp-validation-summary="All"></div>

    <label for="Role">Выберите роли для пользователя: @Model.UserName</label><br />

    @foreach (var role in Model.Roles)
    {
        <div class="form-check">
            <input type="checkbox"
               name="roleNames"
               value="@role.Name"
               class="form-check-input"
               id="@role.Name"
               @(Model.AssignedRoles.Contains(role.Name) ? "checked" : "") />
            <label class="form-check-label" for="@role.Name">
                @role.Name
            </label>
        </div>
    }

    <br /><br /><br />

    <button type="submit" class="btn btn-primary" asp-area="Admin" asp-controller="User" asp-action="EditRights" asp-route-userId="@Model.Id">Сохранить</button>

    <a class="btn btn-outline-primary" asp-area="Admin" asp-controller="User" asp-action="Index">Отмена</a>
</form>

