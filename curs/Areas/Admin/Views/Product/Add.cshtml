@model AddProductViewModel
<div class="container">
    <div class="row">

        <div class="col-md-12">

            <h2>Добавление нового продукта</h2>

            <div class="text-danger font-weight-bold" asp-validation-summary="ModelOnly"></div>

            <form method="post" enctype="multipart/form-data">

                <div class="form-group">
                    <label asp-for="Name">Название</label><br />
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" />
                </div>

                <div class="form-group">
                    <label asp-for="Cost">Стоимость</label>
                    <input asp-for="Cost" class="form-control">
                    <span asp-validation-for="Cost" />
                </div>

                <div class="form-group">
                    <label asp-for="Description">Описание</label>
                    <input asp-for="Description" class="form-control">
                    <span asp-validation-for="Description" />
                </div>

                <div class="form-group">
                    <label asp-for="UploadedFiles">Загрузить изображение</label>
                    <input type="file" name="UploadedFiles" multiple accept="image/*" class="form-control">
                    <span asp-validation-for="UploadedFiles" />
                    
                </div>

                
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Сохранить" asp-area="Admin" asp-controller="Product" asp-action="Add">
                </div>



            </form>
        </div>
    </div>
</div>


