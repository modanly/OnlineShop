@model List<ProductViewModel>

<div class="row">
    <div class="col-lg-3">
        <div class="my-4">
            @await Html.PartialAsync("AdminLeftMenu")
        </div>
    </div>
    <div class="col-9">
        <h3>Список продуктов</h3>
        <a class="btn btn-outline-warning" asp-area="Admin" asp-controller="Product" asp-action="Add"><i class="bi bi-database-add"> Добавить новый продукт </i></a>
        <div class="container overflow-hidden">
            <div class="row">
                @foreach (var product in Model)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card box-shadow h-100">
                            <a asp-controller="Product" asp-action="Index" asp-route-productId="@product.Id"><img class="card-img-top rounded mx-auto d-block w-60 h-60" src="@product.ImagePath" alt="Изображение товара"></a>
                            <div class="card-body">
                                <h5 class="price">@product.Cost &#8381;</h5>
                                <h6 class="card-title">
                                    <a class="link-dark link-no-underline" asp-controller="Product" asp-action="Index" asp-route-productId="@product.Id">@product.Name</a>
                                </h6>

                            </div>
                            <div class="card-body d-flex align-items-end justify-content-around">
                                <a class="btn btn-outline-warning" asp-area="admin" asp-controller="product" asp-action="edit" asp-route-productId="@product.Id"><i class="bi bi-info-square"></i>Редактировать</a>
                                <a class="btn btn-warning" asp-area="admin" asp-controller="product" asp-action="del" asp-route-productId="@product.Id"><i class="bi bi-cart"></i>Удалить</a>
                            </div>
                        </div>
                    </div>
                }
            </div>

        </div>
    </div>
</div>